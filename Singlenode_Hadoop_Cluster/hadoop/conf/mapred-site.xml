<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- Put site-specific property overrides in this file. -->

<configuration>
<property>
	<name>mapred.job.tracker</name>
	<value>loganalyzer:9002</value>
</property>
<property>
    <name>mapred.system.dir</name>
    <value>/home/hduser/hadoop/mapred/system</value>
    <final>true</final>
</property>
<property>
    <name>mapred.local.dir</name>
    <value>/home/hduser/hadoop/mapred/local</value>
    <final>true</final>
</property>

<property>
    <name>mapred.temp.dir</name>
    <value>/home/hduser/hadoop/mapred/tmp</value>
    <final>true</final>
</property>

<property>
    <name>mapred.child.java.opts</name>
    <value>-server -Xmx640m -Djava.net.preferIPv4Stack=true</value>
</property>
<property>
    <name>mapred.child.ulimit</name>
    <value>8388608</value>
</property>

</configuration>
